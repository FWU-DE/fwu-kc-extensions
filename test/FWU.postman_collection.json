					"listen": "test",
					"script": {
						"exec": [
							"const response = pm.response;",
							"const jsonData = response.json();",
							"",
							"pm.test('should return 200', function () {",
							"\tresponse.to.have.status(200);",
							"});",
							"",
							"pm.test('should have user ID', function () {",
							"    const userID = jsonData[0].id;",
